<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/background_material_light"
                 >

    <include
        android:id="@+id/toolbar"
        layout="@layout/toolbar"/>

	<android.support.v7.widget.CardView
			xmlns:card_view="http://schemas.android.com/apk/res-auto"
			android:layout_below="@id/toolbar"
			android:id="@+id/card_view"
			android:layout_marginTop="20dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_margin="10dp"
			card_view:cardCornerRadius="8dp"
			card_view:cardBackgroundColor="@android:color/white"
			>

		<RelativeLayout
				android:id="@+id/inner_card_layout"
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

		<ImageView
				android:id="@+id/poster_image"
				android:layout_width="match_parent"
				android:layout_height="200dp"
				android:layout_centerHorizontal="true"
				android:layout_marginBottom="20dp"
				tools:background="@drawable/bbreakingbad"
				/>

			<TextView
					android:id="@+id/seasons_count_label"
					android:layout_below="@id/poster_image"
					android:text="Seasons"
					android:textSize="@dimen/regular_text_size"
					android:layout_marginLeft="20dp"
					android:drawableLeft="@drawable/calendar"
					android:drawablePadding="20dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:paddingBottom="@dimen/padding_bottom_card_view_details"/>

			<TextView
					android:id="@+id/seasons_count"
					tools:text="5"
					android:layout_toRightOf="@id/seasons_count_label"
					android:layout_below="@id/poster_image"
					android:textSize="16sp"
					android:layout_marginLeft="60dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textColor="@color/material_gray"
					android:paddingBottom="@dimen/padding_bottom_card_view_details"/>

			<Spinner
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:id="@+id/season_picker"
					android:layout_toRightOf="@id/seasons_count"
					android:layout_below="@id/poster_image"
					android:textColor="@color/material_gray"
					android:textSize="16sp"
			        android:dropDownSelector="?android:selectableItemBackground"
			        android:background="?android:selectableItemBackground"

					/>

			<TextView
					android:id="@+id/episode_total_label"
					android:text="Total Episodes"
					android:textSize="@dimen/regular_text_size"
					android:layout_marginLeft="20dp"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/seasons_count_label"
			        android:drawableLeft="@drawable/movieicon"
			        android:drawablePadding="20dp"
			        android:paddingBottom="@dimen/padding_bottom_card_view_details"
					/>

			<TextView
					android:id="@+id/episode_total"
					tools:text="79"
					android:textSize="@dimen/regular_text_size"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="15dp"
					android:textColor="@color/material_gray"
					android:layout_toRightOf="@id/episode_total_label"
					android:layout_below="@id/seasons_count"
					android:paddingBottom="@dimen/padding_bottom_card_view_details"/>

			<TextView
					android:id="@+id/episode_length_label"
					android:text="Episode Length"
					android:layout_marginLeft="20dp"
					android:textSize="@dimen/regular_text_size"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_below="@id/episode_total_label"
					android:drawablePadding="20dp"
					android:drawableLeft="@drawable/clock"
					android:paddingBottom="@dimen/padding_bottom_card_view_details"/>

			<TextView
					android:id="@+id/episode_length"
					tools:text="60 min"
					android:textSize="@dimen/regular_text_size"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginLeft="12dp"
					android:textColor="@color/material_gray"
					android:layout_toRightOf="@id/episode_length_label"
					android:layout_below="@id/episode_total"
					/>

			<LinearLayout
					android:id="@+id/total_bing_row"
					android:layout_width="wrap_content"
					android:layout_below="@id/episode_length_label"
					android:orientation="vertical"
					android:layout_centerHorizontal="true"
					android:layout_marginLeft="40dp"
					android:layout_marginRight="10dp"
					android:layout_marginTop="20dp"
					android:layout_height="80dp">

				<TextView
						android:id="@+id/total_binge_label"
						android:text="Total Binge Time"
						android:textSize="@dimen/regular_text_size"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
				        android:layout_gravity="center_horizontal"

						/>

				<TextView
						android:id="@+id/binge_time"
						tools:text="3 days 7 hours 0 mins"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:textColor="@color/material_red"
						android:textSize="@dimen/regular_text_size"
						/>

				<TextView
						android:id="@+id/fine_tune_link"
						android:layout_width="wrap_content"
						android:layout_height="wrap_content"
						android:layout_marginTop="8dp"
						android:text="Fine tune binge time?"
						android:textColor="@color/material_blue"
						android:clickable="true"
						android:textStyle="bold|italic"
						android:layout_gravity="center_horizontal"/>


			</LinearLayout>



		</RelativeLayout>





	</android.support.v7.widget.CardView>



</LinearLayout>