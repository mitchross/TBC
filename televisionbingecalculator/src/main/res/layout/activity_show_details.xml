<?xml version="1.0" encoding="utf-8"?>
<layout
		xmlns:android="http://schemas.android.com/apk/res/android"
		xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto" >

<android.support.constraint.ConstraintLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

	<include
			android:id="@+id/toolbar"
			layout="@layout/toolbar"
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toTopOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			tools:layout_constraintRight_creator="1"
			tools:layout_constraintLeft_creator="1"
			android:layout_marginTop="0dp"
			app:layout_constraintHorizontal_bias="0.0"
			android:layout_marginBottom="0dp" />

	<ImageView
			tools:src="@drawable/bbreakingbad"
			android:layout_width="0dp"
			android:layout_height="150dp"
			android:id="@+id/poster_image"
			android:background="@android:color/black"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/toolbar"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintHorizontal_bias="1.0"
			tools:layout_constraintRight_creator="1"
			tools:layout_constraintLeft_creator="1">

	</ImageView>



	<View
			android:layout_width="0dp"
			android:layout_height="60dp"
			android:id="@+id/blue_bar"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toBottomOf="@+id/poster_image"
			android:background="@color/material_blue"
			tools:layout_constraintRight_creator="1"
			tools:layout_constraintLeft_creator="1" />

	<ImageView
			android:layout_width="60dp"
			android:layout_height="80dp"
			tools:src="@drawable/bbreakingbad"
			android:id="@+id/thumbnail"
			app:layout_constraintTop_toTopOf="@+id/blue_bar"
			app:layout_constraintBottom_toBottomOf="@+id/blue_bar"
			app:layout_constraintRight_toLeftOf="@+id/title"
			app:layout_constraintLeft_toLeftOf="@+id/blue_bar"
			android:layout_marginLeft="10dp"
			android:layout_marginBottom="54dp"
			android:layout_marginStart="10dp" />

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="Its always sunny in philidelphia"
			android:id="@+id/title"
			android:textColor="@android:color/white"
			app:layout_constraintTop_toTopOf="@+id/blue_bar"
			app:layout_constraintBottom_toBottomOf="@+id/category_title"
			app:layout_constraintLeft_toRightOf="@+id/thumbnail"
			android:layout_marginLeft="10dp"
			android:textSize="18sp"

			app:layout_constraintVertical_bias="0.3"
			android:layout_marginStart="10dp" />

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/year"
			android:fontFamily="sans-serif-light"
			tools:text="(1986)"
			app:layout_constraintLeft_toRightOf="@+id/category_title"
			app:layout_constraintTop_toTopOf="@+id/category_title"
			android:textColor="@android:color/white"
			android:layout_marginLeft="10dp"
			android:layout_marginStart="10dp" />

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			tools:text="Animation, Comedy"
			android:fontFamily="sans-serif-light"
			android:id="@+id/category_title"
			android:textColor="@android:color/white"
			app:layout_constraintTop_toBottomOf="@+id/title"
			app:layout_constraintBottom_toBottomOf="@+id/blue_bar"
			app:layout_constraintLeft_toRightOf="@+id/thumbnail"
			android:layout_marginLeft="10dp"

			android:layout_marginStart="10dp" />

	<ScrollView
			android:layout_width="0dp"
			android:layout_height="50dp"
			android:layout_marginLeft="10dp"
			android:layout_marginRight="10dp"
			android:id="@+id/desc_scrollview"
			app:layout_constraintTop_toBottomOf="@+id/blue_bar"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			android:layout_marginStart="10dp"
			android:layout_marginEnd="10dp"
			app:layout_constraintHorizontal_bias="0.0"
			app:layout_constraintVertical_bias="0.0">

		<TextView
				android:id="@+id/episode_description"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				android:layout_marginTop="10dp"
				android:fontFamily="sans-serif-light"
				android:textColor="@color/material_gray_600"
				tools:text="The survivors of a plane crash are forced to work together in order to survive on a seemingly deserted tropical island.The survivors of a plane crash are forced to work together in order to survive on a seemingly deserted tropical island.The survivors of a plane crash are forced to work together in order to survive on a seemingly deserted tropical island.The survivors of a plane crash are forced to work together in order to survive on a seemingly deserted tropical island."
				/>


	</ScrollView>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/all_seasons_title"
			android:text="All Seasons"
			android:textSize="18dp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@id/desc_scrollview"
			android:layout_marginLeft="10dp"
			android:layout_marginBottom="10dp"
			android:fontFamily="sans-serif-light"
			android:layout_marginStart="10dp" />

	<android.support.v7.widget.SwitchCompat
			android:id="@+id/switch_toggle"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_marginRight="10dp"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintTop_toTopOf="@+id/all_seasons_title"
			android:layout_marginEnd="10dp" />

	<android.support.v7.widget.AppCompatSpinner
			android:layout_width="wrap_content"
			android:layout_height="24dp"
			android:id="@+id/season_spinner"
			android:layout_marginLeft="10dp"
			android:layout_marginBottom="10dp"
			app:layout_constraintTop_toBottomOf="@id/all_seasons_title"
			app:layout_constraintLeft_toLeftOf="parent"
			android:layout_marginStart="10dp">


	</android.support.v7.widget.AppCompatSpinner>

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/episode_total"
			android:layout_marginLeft="10dp"
			tools:text="14 Episodes"
			android:fontFamily="sans-serif-light"
			android:layout_marginBottom="10dp"
			android:textSize="18sp"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintTop_toBottomOf="@id/season_spinner"
			android:layout_marginStart="10dp" />

	<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:text="TOTAL BINGE TIME"
			android:background="@color/material_blue"
			android:textColor="@android:color/white"
			android:id="@+id/binge_title"
			android:gravity="center"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/binge_time"
			tools:layout_constraintRight_creator="1"
			tools:layout_constraintLeft_creator="1" />

	<TextView
			android:layout_width="0dp"
			android:layout_height="wrap_content"
			android:textColor="@android:color/white"
			android:background="@color/material_blue"
			android:textSize="24sp"
			android:id="@+id/binge_time"
			tools:text="3d 14h 43m"
			android:gravity="center"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			app:layout_constraintBottom_toTopOf="@+id/available_title"
			tools:layout_constraintRight_creator="1"
			tools:layout_constraintLeft_creator="1" />

	<TextView
			android:layout_height="wrap_content"
			android:layout_width="wrap_content"
			android:id="@+id/available_title"
			android:text="Available On"
			app:layout_constraintBottom_toTopOf="@+id/steaming_logo_recycler_view"
			app:layout_constraintLeft_toLeftOf="parent"
			app:layout_constraintRight_toRightOf="parent"
			tools:layout_constraintRight_creator="1"
			tools:layout_constraintLeft_creator="1" />


