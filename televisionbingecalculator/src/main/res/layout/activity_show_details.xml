<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.vanillax.televisionbingecalculator.app.TBC.Activity.ShowDetailsActivity">

	<TextView
			android:layout_below="@id/search_field"
			android:id="@+id/seasons_count"
			android:text="Unknown"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	<TextView
			android:id="@+id/episode_total"
			android:layout_below="@id/seasons_count"
			android:text="Unknown"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />
	<TextView
			android:id="@+id/binge_time"
			android:layout_below="@id/episode_total"
			android:text="Unknown"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content" />

	<ImageView
			android:id="@+id/poster_image"
			android:layout_below="@id/binge_time"
			android:layout_marginTop="20dp"
			android:layout_width="match_parent"
			android:layout_height="350dp" />

</RelativeLayout>
