<?xml version="1.0" encoding="utf-8"?>
	<android.support.constraint.ConstraintLayout
			xmlns:android="http://schemas.android.com/apk/res/android"
			xmlns:app="http://schemas.android.com/apk/res-auto"
			xmlns:tools="http://schemas.android.com/tools"
			android:orientation="vertical"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:id="@+id/constraintLayout">

	<include
			android:id="@+id/toolbar"
			layout="@layout/toolbar"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
			app:layout_constraintTop_toTopOf="@+id/constraintLayout"
			app:layout_constraintRight_toRightOf="@+id/constraintLayout" />

		<ImageView
				tools:src="@drawable/bbreakingbad"
				android:layout_width="match_parent"
				android:layout_height="169dp"
				android:id="@+id/poster_image"
				android:background="@android:color/black"
				app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
				app:layout_constraintTop_toBottomOf="@+id/toolbar"
				app:layout_constraintRight_toRightOf="@+id/constraintLayout"
				app:layout_constraintHorizontal_bias="1.0">

		</ImageView>

	<TextView
			android:text="Episode length"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/episode_length_label"
			app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
			android:layout_marginLeft="14dp"
			android:layout_marginStart="14dp"
			app:layout_constraintTop_toBottomOf="@+id/poster_image"
			android:layout_marginTop="24dp" />

	<TextView
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/episode_length"
			tools:text="40"
			app:layout_constraintCenterY_toCenterY="@id/episode_length_label"
			app:layout_constraintLeft_toRightOf="@+id/episode_length_label"
			android:layout_marginLeft="32dp"
			android:layout_marginStart="32dp"
			app:layout_constraintTop_toTopOf="@+id/episode_length_label"
			app:layout_constraintBottom_toBottomOf="@+id/episode_length_label" />

	<TextView
			android:text="Description"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/description_label"
			app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
			android:layout_marginLeft="14dp"
			android:layout_marginStart="14dp"
			app:layout_constraintTop_toBottomOf="@+id/episode_length_label"
			android:layout_marginTop="8dp" />

	<ScrollView
			android:layout_width="0dp"
			android:layout_height="100dp"
			android:id="@+id/desc_scrollview"
			android:layout_marginLeft="4dp"
			app:layout_constraintLeft_toRightOf="@+id/description_label"
			app:layout_constraintTop_toBottomOf="@+id/description_label"
			app:layout_constraintRight_toRightOf="@+id/constraintLayout"
			android:layout_marginStart="4dp">

		<TextView
				android:id="@+id/episode_description"
				android:layout_height="wrap_content"
				android:layout_width="wrap_content"
				tools:text="The survivors of a plane crash are forced to work together in order to survive on a seemingly deserted tropical island."
				tools:layout_editor_absoluteX="0dp"
				tools:layout_editor_absoluteY="0dp" />


	</ScrollView>

	<TextView
			android:text="Season"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/season_label"
			android:layout_marginLeft="14dp"
			android:layout_marginStart="14dp"
			app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
			app:layout_constraintTop_toBottomOf="@+id/desc_scrollview"
			android:layout_marginTop="8dp" />

	<CheckBox
			android:text="Select All"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/select_all_checkbox"
			android:layout_marginRight="8dp"
			app:layout_constraintCenterY_toCenterY="@id/season_label"
			app:layout_constraintRight_toRightOf="@id/constraintLayout"
			tools:layout_editor_absoluteY="337dp"
			tools:layout_editor_absoluteX="313dp" />

	<android.support.v7.widget.RecyclerView
	android:id="@+id/seasons_recycler_view"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:orientation="horizontal"
	app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
	app:layout_constraintRight_toRightOf="@id/constraintLayout"
	app:layout_constraintTop_toBottomOf="@+id/season_label"
	android:layout_marginTop="9dp" />

	<TextView
			android:text="Episodes"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/episodes_label"
			android:layout_marginLeft="14dp"
			android:layout_marginStart="14dp"
			android:layout_marginTop="8dp"
			android:layout_marginBottom="8dp"
			app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
			app:layout_constraintTop_toBottomOf="@+id/seasons_recycler_view"
			app:layout_constraintBottom_toTopOf="@+id/binge_title"/>


	<TextView
			android:text="24"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:id="@+id/episode_total"
			app:layout_constraintCenterY_toCenterY="@id/episodes_label"
			app:layout_constraintLeft_toRightOf="@+id/episodes_label"
			android:layout_marginLeft="12dp"
			android:layout_marginStart="12dp"
			app:layout_constraintTop_toTopOf="@+id/episodes_label"
			app:layout_constraintBottom_toBottomOf="@+id/episodes_label" />

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:text="TOTAL BINGE TIME"
			android:background="@color/material_blue"
			android:textColor="@android:color/white"
			android:id="@+id/binge_title"
			android:layout_marginTop="8dp"
			android:gravity="center"
			app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
			app:layout_constraintBottom_toTopOf="@+id/binge_time" />

	<TextView
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:textColor="@android:color/white"
			android:background="@color/material_blue"
			android:textSize="24sp"
			android:id="@+id/binge_time"
			tools:text="3d 14h 43m"
			android:gravity="center"
			app:layout_constraintLeft_toLeftOf="@+id/constraintLayout"
			app:layout_constraintTop_toBottomOf="@+id/binge_title"
			app:layout_constraintBottom_toBottomOf="@id/constraintLayout"/>





</android.support.constraint.ConstraintLayout>
