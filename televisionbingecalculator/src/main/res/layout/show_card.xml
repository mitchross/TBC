<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
		xmlns:app="http://schemas.android.com/apk/res-auto">
<data>
	<import type="com.vanillax.televisionbingecalculator.app.viewmodel.ShowPosterViewModelItem"/>
	<variable name="viewModel" type="ShowPosterViewModelItem"/>
</data>

<RelativeLayout
		android:id="@+id/parent"
		android:layout_width="wrap_content"
		android:layout_height="200dp"
		>

		<ImageView
				android:id="@+id/poster_image"
				tools:background="@drawable/ic_launcher"
				android:layout_width="match_parent"
				android:layout_height="match_parent" />
		        <!--app:imageUrl="@{viewModel.posterUrl}"-->
				 <!--/>-->


	<TextView
			android:layout_width="match_parent"
			android:layout_height="80dp"
			android:gravity="center"
			android:text="@{viewModel.titlez}"
			tools:text="Lost"
			android:textColor="@android:color/white"
			android:textSize="18sp"
			android:textStyle="bold"
			android:id="@+id/show_title"
			android:background="@color/black_15"
			android:layout_alignParentBottom="true"
			android:layout_alignParentLeft="true"
			android:layout_alignParentStart="true" />


</RelativeLayout>
</layout>